{
  "name": "file-upload-ui",
  "version": "1.0.0",
  "description": "Mobile-first file upload UI with drag-and-drop, file parsing, and metadata form",
  "source": "src/demo/index.tsx",
  "scripts": {
    "start": "parcel public/index.html --open",
    "build:app": "parcel build public/index.html",
    "test": "jest",
    "test:unit": "jest --testPathPattern=\\.test\\.tsx?$",
    "test:property": "jest --testPathPattern=\\.property\\.test\\.tsx?$",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci",
    "test:mobile": "jest --testPathPattern=mobile",
    "test:a11y": "jest --testPathPattern=a11y",
    "build": "tsc",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "file-upload",
    "drag-and-drop",
    "mobile-first",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@xyflow/react": "^12.10.0",
    "fuse.js": "^7.1.0",
    "papaparse": "^5.5.3",
    "pdfjs-dist": "^5.4.624",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@parcel/transformer-typescript-tsc": "^2.11.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "buffer": "^6.0.3",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fast-check": "^3.15.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "parcel": "^2.11.0",
    "process": "^0.11.10",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
